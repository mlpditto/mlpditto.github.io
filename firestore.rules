rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    // Check if user is the admin (by email)
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'medlifeplus@gmail.com';
    }

    // Check if user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- Collection Rules ---

    // FAQs: Public Read, Admin Write
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users: Owner can read/write their own, Admin can do all
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin(); 
    }

    // Tasks: Admin full access. Users can read/write their own tasks.
    match /tasks/{taskId} {
      allow read: if isAdmin() || (isAuthenticated() && (resource.data.createdBy == request.auth.uid || resource.data.userId == request.auth.uid));
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || (isAuthenticated() && (resource.data.createdBy == request.auth.uid || resource.data.userId == request.auth.uid));
    }

    // Archive: Admin only
    match /archive/{archiveId} {
      allow read, write: if isAdmin();
    }
    
    // Shared Stock / System / Settings: Public read for app functionality, Admin write
    match /system/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /master_products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // VCI System Rules (Visitor Check-in)
    match /companies/{companyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /visitor_registrations/{regId} {
      allow create: if true; 
      allow read: if isAdmin() || isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    match /visitor_logs/{logId} {
      allow create: if true;
      allow read: if isAdmin() || isAuthenticated();
      allow update, delete: if isAdmin();
    }

    match /visitor_appointments/{aptId} {
      allow create: if true;
      allow read: if isAdmin() || isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // System Test
    match /system_test/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
